{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "website/scripts/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "website/docs/.vitepress/dist",
    "docs-site-export"
  ]
}
